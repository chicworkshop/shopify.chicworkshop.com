<!-- /snippets/onboarding-article-grid-item.liquid -->

{% comment %}
  * An article block that fills the container with an image with overlayed title
  {% render onboarding-article-grid-item', article: article, aspect_ratio: section.settings.aspect_ratio, show_author: section.settings.show_author, show_preview: section.settings.show_preview, show_link: section.settings.show_link %}
{% endcomment %}

<div class="article__item">
  <div class="article__item-image" data-grid-slide>
    <div class="image__fill" style="padding-top: {{ aspect_ratio | times: 100 }}%; background: var(--muted);"></div>
  </div>

  <div class="article__item-content">
    {% if show_date %}
      <div class="article__item-meta">
        {% if show_date %}
          <span class="article__item-date">
            <time>{{ "now" | date: format: 'month_day_year' }}</time>
          </span>
        {% endif %}
      </div>
    {% endif %}

    <h3 class="article__item-title h5 mb0">
      <a href="#">{{ 'home_page.onboarding.blog_title' | t }}</a>
    </h3>

    {% if show_author %}
      <div class="article__item-author">
        <span>
          {{ 'blogs.article.by' | t }}  {{ 'contact.form.name' | t }}
        </span>
      </div>
    {% endif %}

    {% if show_preview %}
      <div class="rte--column">
        <p>{{ 'home_page.onboarding.blog_excerpt' | t | truncatewords: 25 }}</p>
      </div>
    {% endif %}

    {% if show_link %}
      <a href="#" class="text-link">{{ 'blogs.article.read_more' | t }}</a>
    {% endif %}
  </div>
</div>
