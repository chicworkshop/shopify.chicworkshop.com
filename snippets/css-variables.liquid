--FONT-STYLE-ACCENT: {{ accent_font.style }};
--FONT-WEIGHT-ACCENT: {{ accent_font.weight | default: 400 }};
--FONT-WEIGHT-ACCENT-BOLD: {{ accent_font_bold.weight | default: 700 }};
